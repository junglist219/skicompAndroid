<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="skiArea" type="de.skicomp.models.SkiArea"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_gradient">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="@drawable/ic_arrow_bottom"
            app:title="">

            <TextView
                style="@style/DefaultText.White"
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="@dimen/text_toolbar_title"
                android:fontFamily="sans-serif-thin" />

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/DefaultText.White"
                        android:id="@+id/tv_skiarea_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="28sp"
                        android:text="@{skiArea.name}" />

                    <TextView
                        style="@style/DefaultText.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_skiarea_title"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/text_subtitle"
                        android:text="@{skiArea.state + `, ` + skiArea.country}" />

                </RelativeLayout>

                <TextView
                    style="@style/DefaultText.DarkGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:padding="@dimen/default_padding"
                    android:background="@drawable/background_light_gray_rounded_corners_top"
                    android:text="HÃ¶he"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:padding="@dimen/default_padding"
                    android:background="@drawable/background_light_gray_rounded_corners_bottom"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiarea_min_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/default_padding"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_light_gray_rounded_corners_left"
                            android:text="@{skiArea.displayMinHeight}"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/tv_skiarea_min_height"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_account" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_skiarea_max_height"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_account" />

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiarea_max_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/iv_skiarea_max_height"
                            android:padding="@dimen/default_padding"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_light_gray_rounded_corners_left"
                            android:text="@{skiArea.displayMaxHeight}"/>

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    style="@style/DefaultText.DarkGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:padding="@dimen/default_padding"
                    android:background="@drawable/background_light_gray_rounded_corners_top"
                    android:text="Pisten"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_light_gray_rounded_corners_bottom"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <de.skicomp.views.SlopeCircle
                            android:id="@+id/sc_slopes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:rotation="-90" />

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/text_toolbar_title"
                            android:text="@{skiArea.slopesLength}"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_skiarea_slopes_easy"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/default_padding"
                                android:src="@drawable/ic_slope_dot_easy"/>

                            <TextView
                                style="@style/DefaultText.DarkGray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/default_padding"
                                android:text="@{skiArea.displaySlopesEasy}"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_skiarea_slopes_moderate"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/default_padding"
                                android:src="@drawable/ic_slope_dot_moderate"/>

                            <TextView
                                style="@style/DefaultText.DarkGray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/default_padding"
                                android:text="@{skiArea.displaySlopesModerate}"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_skiarea_slopes_expert"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/default_padding"
                                android:src="@drawable/ic_slope_dot_expert"/>

                            <TextView
                                style="@style/DefaultText.DarkGray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/default_padding"
                                android:text="@{skiArea.displaySlopesExpert}"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_skiarea_slopes_freeride"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="@dimen/default_padding"
                                android:src="@drawable/ic_slope_dot_freeride"/>

                            <TextView
                                style="@style/DefaultText.DarkGray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/default_padding"
                                android:text="@{skiArea.displaySlopesFreeride}"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/DefaultText.DarkGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:padding="@dimen/default_padding"
                    android:background="@drawable/background_light_gray_rounded_corners_top"
                    android:text="Lifte"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_light_gray_rounded_corners_bottom"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/default_padding">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_account"/>

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiareas_lifts_draglifts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/default_padding"
                            android:text="@{String.valueOf(skiArea.dragLifts)}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/default_padding">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_account"/>

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiareas_lifts_chairlifts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/default_padding"
                            android:text="@{String.valueOf(skiArea.chairLifts)}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/default_padding">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_account"/>

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiareas_lifts_gondola"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/default_padding"
                            android:text="@{String.valueOf(skiArea.gondolaLifts)}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/default_padding">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_account"/>

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiareas_lifts_aerialtramway"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/default_padding"
                            android:text="@{String.valueOf(skiArea.aerialTramways)}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/default_padding">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_account"/>

                        <TextView
                            style="@style/DefaultText.DarkGray"
                            android:id="@+id/tv_skiareas_lifts_railways"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/default_padding"
                            android:text="@{String.valueOf(skiArea.railways)}"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
        
</layout>