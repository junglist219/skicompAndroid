<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.skicomp">

    <application
        android:name=".SkiCompApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="de.skicomp.activities.onboarding.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.skicomp.activities.onboarding.OnboardingActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name="de.skicomp.activities.main.AccountActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="de.skicomp.activities.main.StatisticsActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="de.skicomp.activities.main.MapActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="de.skicomp.activities.main.SkiAreasActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="de.skicomp.activities.main.MoreActivity"
            android:windowSoftInputMode="adjustPan"/>
        
    </application>

</manifest>